{{#each errors}}
<h3>{{this}}</h3>
{{/each}}
<div class="row">
  {{#each events}}
<div class="col-md-3">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title d-flex justify-content-between align-items-center">
        <a href="/events/details/{{_id}}">{{ title }}</a> <a href="/events/edit/{{_id}}"><i class="fas fa-edit"></i></a>
      </h4>
      <p>{{ description }}</p>
      {{!-- Delete request --}}
      <form action="/events/delete/{{_id}}?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
      </form>
    </div>
  </div>
</div>
{{/each}}
